<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

        <record id="claim_to_opportunity_wizard" model="ir.ui.view">
            <field name="name">claim.to.opportunity.wizard</field>
            <field name="model">claim.to.opportunity</field>
            <field name="arch" type="xml">
                <form string="Create an Opportunity">
                    <group>
                        <field name="partner" />
                        <field name="user" />
                        <field name="name" />
                        <field name="description" />
                    </group>

                    <footer>
                        <button name="create_opportunity" string="Create an Opportunity" type="object" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

	</data>
</openerp>
