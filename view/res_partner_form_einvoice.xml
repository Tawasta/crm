<?xml version="1.0"?>
<openerp>
	<data>
		<!-- Contact simple form view -->
		<record model="ir.ui.view" id="view_partner_simple_einvoice_form">
			<field name="name">eInvoice simplified form view</field>
			<field name="model">res.partner</field>
			<field eval="20" name="priority"/>
			
			<field name="arch" type="xml">
				<form string="e-Invoice address">
					<sheet>
						<group>
							<group style="width: 60%;">
								<field name="name" />
								<field name="edicode" required='1'/>
								<field name="einvoice_operator" />
								
								<field name="is_company" invisible='1'/>
								<field name="company_id" invisible='1'/>
								<field name="type" invisible='1'/>
								<field name="use_parent_address" invisible='1'/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</openerp>