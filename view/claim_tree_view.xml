<?xml version="1.0"?>
<openerp>
    <data>    
 		<record model="ir.ui.view" id="crm_claim.crm_case_claims_tree_view">
            <field name="name">Claims tree view</field>
            <field name="model">crm.claim</field>
            <field name="arch" type="xml">
            
				<tree string='Claims' colors="grey: (stage=='Rejected') or (stage=='Settled'); blue: stage=='New'; red: date_deadline and (date_deadline&lt;current_date)" fonts="bold: (message_unread==True)">
					<field name="message_unread" invisible="1"/>
					<field name='claim_number' string='#'/>
					<field name='name' />
					<field name='company_id' />
					<field name='partner_id' />
					<field name='user_id' />
					<field name='stage_id' />
					<field name='stage' invisible='1'/>
					<field name='priority' />
					<field name='sla' />
					<field name='date' />
					<field name='write_date' />
					<field name='date_deadline' />
					<field name='date_action_next' />
					<field name='action_next' />
				</tree>

            </field>
            
		</record>
    </data>
</openerp>