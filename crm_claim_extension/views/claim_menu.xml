<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
    	<!-- Delete the 'Claims' menu item -->
    	<!--
			<delete model="ir.ui.menu" id="crm_claim.menu_crm_case_claims" />
		 -->
		
		<!-- My claims menu action -->
        <record model="ir.actions.act_window" id="crm_case_categ_claim_my">
            <field name="name">Claims</field>
            <field name="res_model">crm.claim</field>
            <field name="view_id" ref="crm_claim.crm_case_claims_tree_view"/>
            <field name="view_type">form</field>
            <field name="view_mode">tree,calendar,form</field>
            <field name="auto_refresh">5</field>
            <field name="domain">[('user_id', '=', uid)]</field>
            <field name="context">{"search_default_active_claims":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Record and track your customers' claims. Claims may be linked to a sales order or a lot.You can send emails with attachments and keep the full history for a claim (emails sent, intervention type and so on).Claims may automatically be linked to an email address using the mail gateway module.
                </p>
            </field>
        </record>
        
		<!-- All claims menu action -->
        <record model="ir.actions.act_window" id="crm_case_categ_claim_all">
            <field name="name">Claims</field>
            <field name="res_model">crm.claim</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,calendar,form</field>
            <field name="auto_refresh">5</field>
            <field name="context">{"search_default_active_claims":1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Record and track your customers' claims. Claims may be linked to a sales order or a lot.You can send emails with attachments and keep the full history for a claim (emails sent, intervention type and so on).Claims may automatically be linked to an email address using the mail gateway module.
                </p>
            </field>
        </record>

		<!-- Portal claims menu action -->
        <record model="ir.actions.act_window" id="crm_case_categ_claim_portal">
            <field name="name">Portal claims</field>
            <field name="res_model">crm.claim</field>
            <field name="view_id" ref="crm_claim.crm_case_claims_portal_tree_view"/>
            <field name="context">{
                'search_default_active_claims': 1,
                'tree_view_ref': 'crm_claim.crm_case_claims_portal_tree_view',
                'form_view_ref': 'crm_claim.crm_case_claims_portal_form_view',
                }
            </field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No claims.
                </p>
            </field>
        </record>

		<menuitem name="My Claims" id="menu_crm_case_claims_my" parent="base.menu_aftersale" action="crm_case_categ_claim_my" sequence="10" groups="base.group_user"/>
		<menuitem name="All Claims" id="menu_crm_case_claims_all" parent="base.menu_aftersale" action="crm_case_categ_claim_all" sequence="20" groups="base.group_user"/>
		<menuitem name="Portal Claims" id="menu_crm_case_claims_portal" parent="base.menu_aftersale" action="crm_case_categ_claim_portal" sequence="30" groups="base.group_portal"/>

	</data>
</openerp>