<?xml version="1.0"?>
<openerp>
    <data>
    
 	<record model="ir.ui.view" id="crm_claim_form_view_extension">
            <field name="name">Claims form view</field>
            <field name="model">crm.claim</field>
            <field name="inherit_id" ref="crm_claim.crm_case_claims_form_view"/>
            <field name="arch" type="xml">

                <!-- Reorder the header -->
                <xpath expr="//sheet/group[1]" position="replace" />

                <xpath expr="//sheet/group[1]" position="replace">
                    <h2>Claim #<field name='claim_number' readonly='1' style="display: inline;"/></h2>

                    <group name="partner" string="Partner" col="4">
                        <field name="company_id" readonly="1" colspan="3" />
                        <field name="reply_to" nolabel="1" readonly="1" />

                        <field name="partner_id" required="1" colspan="4" />

                        <field name="email_from_readonly" readonly="1" colspan="2" string="Recipient" />
                        <field name="email_from" invisible="1" colspan="0"/>

                        <field name="partner_phone" nolabel="1" readonly="1" />

                        <field name="email_cc" colspan="4" />
                    </group>
                </xpath>

                <!-- Claim info -->
                <xpath expr="//page[@string='Claim Description']/separator" position="replace" />
                <field name="description" position="replace" />

                <xpath expr="//page[@string='Claim Description']/group[1]" position="replace">

                    <group name="claim" string="Claim" col="4">
                        <field name="date" />
                        <field name="date_deadline" />

                        <field name="user_id" />
                        <field name="sla" widget='priority'/>

                        <field name='name' colspan="4" />
                        <field name="description" colspan="4" />
                        <field name='attachment_ids' widget="many2many_binary" colspan="4"/>

                        <field name="priority" widget="priority" invisible="1" />
                        <field name="section_id" groups="base.group_multi_salesteams"/>
                    </group>
                </xpath>

                <xpath expr="//page[@string='Claim Description']/group[2]" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- Stage changes-page -->
				<notebook position='inside'>
					<page string='Stage changes' groups="base.group_user">
						<field name='stage_change_ids'>
							<tree>
								<field name='create_uid' />
								<field name='create_date' />
								<field name='stage' />
								<field name='hours' widget="float_time"/>
							</tree>
						</field>

                        <group>
                            <field name="time_open" widget="float_time" invisible="0"/>
                        </group>
					</page>
				</notebook>

				<div class='oe_chatter' position='attributes'>
					<attribute name='class'>oe_chatter oe_read_only</attribute>
				</div>

            </field>
            
		</record>
    
    </data>
</openerp>