<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
      	<record id="view_report_crm_claim_filter_extended" model="ir.ui.view">
            <field name="name">CRM Claim filter</field>
            <field name="model">crm.claim.report</field>
            <field name="inherit_id" ref="crm_claim.view_report_crm_claim_filter"/>
            <field name="arch" type="xml">

				<search position='inside'>
		            <group string='Date grouping'>
		                <filter string="Week" name="claim_date_column_group_week" help="Group weekly by claim date" 
		                	context="{'col_group_by': ['claim_date:week'], 'measures': ['nbr_claims', 'email']}"/>
		                <filter string="Month" name="claim_date_column_group_month" help="Group monthly by claim date" 
		                	context="{'col_group_by': ['claim_date:month']}, 'measures': ['nbr_claims', 'email']"/>
		                <filter string="Year" name="claim_date_column_group_year" help="Group yearly by claim date" 
		                	context="{'col_group_by': ['claim_date:year']}, 'measures': ['nbr_claims', 'email']"/>
		            </group>
		            
					<group string='Order Year' icon="terp-calendar">
					    <filter string="2014" name="year_2014" domain="[('year_claim','=','2014')]"/>
					    <filter string="2015" name="year_2015" domain="[('year_claim','=','2015')]"/>
					</group>
					
                    <group string='Order Month'>
                        <filter string="January"    name="month_01" domain="[('month_claim','=','1')]"/>
                        <filter string="February"   name="month_02" domain="[('month_claim','=','2')]"/>
                        <filter string="March"      name="month_03" domain="[('month_claim','=','3')]"/>
                        <filter string="April"      name="month_04" domain="[('month_claim','=','4')]"/>
                        <filter string="May"        name="month_05" domain="[('month_claim','=','5')]"/>
                        <filter string="June"       name="month_06" domain="[('month_claim','=','6')]"/>
                        <filter string="July"       name="month_07" domain="[('month_claim','=','7')]"/>
                        <filter string="August"     name="month_08" domain="[('month_claim','=','8')]"/>
                        <filter string="September"  name="month_09" domain="[('month_claim','=','9')]"/>
                        <filter string="October"    name="month_10" domain="[('month_claim','=','10')]"/>
                        <filter string="November"   name="month_11" domain="[('month_claim','=','11')]"/>
                        <filter string="December"   name="month_12" domain="[('month_claim','=','12')]"/>
                    </group>
		        </search>
		        
		        <!-- Remove obsolete filters -->
		        <filter string='Sales Team' position='replace' />
		        <filter string='Claim Month' position='replace' />
		        <filter string='Category' position='replace' />
            	
            </field>
      	</record>
    </data>
</openerp>