<openerp>
    <data>
        <record id="crm_case_kanban_view_leads" model="ir.ui.view">
			<field name="name">CRM Opportunity Kanban</field>
			<field name="model">crm.lead</field>
			<field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
			<field name="arch" type="xml">

				<xpath expr="//field[@name='user_id']" position='after'>
					<field name='sale_order' />
					<field name='sale_order_state' />
				</xpath>

                <xpath expr="//kanban/templates//div[@class='oe_kanban_content']/div[2]" position="inside">
                    <div style="padding: 0.5em">
                        <span attrs="{'invisible': [('sale_order', '=', False)]}" >
                            <b>
                                <field name="sale_order_state" readonly="1" attrs="{'invisible': [('sale_order', '=', False)]}" />
                                (<field name="sale_order" readonly="1"/>)
                            </b>
                        </span>
                    </div>
                </xpath>
	            
			</field>
		</record>
        
    </data>
</openerp>