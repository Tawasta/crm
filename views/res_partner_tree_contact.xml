			<field name="name">Contact simplified form view</field>
			<field name="model">res.partner</field>
			<field eval="20" name="priority"/>
			
			<field name="arch" type="xml">
   	
               	<tree delete="false">
               		<field name='customer_number' string='#' />
               		<field name='name' />
               		<field name='phone' />
               		<field name='email' />
               		<field name='parent_id'/>
               	</tree>

			</field>
		</record>
	</data>
</openerp>