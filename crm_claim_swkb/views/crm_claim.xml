<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record id="crm_case_claims_form_view" model="ir.ui.view">
			<field name="name">crm.case.claims.form.view.swkb.records</field>
			<field name="model">crm.claim</field>
            <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
			<field name="inherit_id" ref="crm_claim.crm_case_claims_form_view" />
			<field name="arch" type="xml">

            <xpath expr="//notebook/page[1]" position="after">
                <page string="Installations" groups="base.group_user">
                    <field name="swkb_installations">
                        <tree editable="top">
                            <field name="name" />
                            <field name="url" />
                            <field name="server_ip_address" />
                            <field name="db_server_ip_address" />
                        </tree>
                    </field>
                </page>

            </xpath>

			</field>
		</record> 

	</data>
</openerp>