<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record id="view_company_form" model="ir.ui.view">
			<field name="name">Mattermost API</field>
			<field name="model">res.company</field>
			<field name="inherit_id" ref="base.view_company_form" />
			<field name="arch" type="xml">

				<page string="Configuration" position="after">
                    <page string="Mattermost">
                        <group string="Settings">
                            <group>
                                <field name="mattermost_login_id" />
                                <field name="mattermost_password" password="True"/>
                                <field name="mattermost_team" />
                                <field name="mattermost_channel" />
                            </group>
                            <group>
                                <field name="mattermost_url" />
                                <field name="mattermost_port" />
                                <field name="mattermost_basepath" />
                                <field name="mattermost_scheme" />
                                <field name="mattermost_verify" />
                                <field name="mattermost_active" />
                            </group>
                        </group>
                    </page>
				</page>

			</field>
		</record> 

	</data>
</openerp>